<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lvl_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/round_box"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgs"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:scaleType="centerCrop"
                android:src="@drawable/trak"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Avatar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txt_name"
                    style="@style/Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:padding="2dp"  android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_price"
                        style="@style/Font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text=""
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/txt_atype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text=""
                        android:textSize="10dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_lorrynumber"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    android:textSize="10dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/txt_rates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_star"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/purple_700" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_reject"
                style="@style/AppTheme.Button"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_emty"
                android:text="@string/reject"
                android:textColor="@color/teal_700"
                android:textSize="12dp" />

            <View
                android:layout_width="20dp"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/txt_accept"
                style="@style/AppTheme.Button"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:text="@string/accept"
                android:textSize="12dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>