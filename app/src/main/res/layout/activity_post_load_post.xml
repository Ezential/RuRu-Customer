<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.postload.PostLoadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/gradient"
        android:orientation="vertical"
        android:padding="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:padding="10dp">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/ic_back_white" />

            <TextView
                android:id="@+id/txt_actionbar"
                style="@style/Font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/post_load"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </RelativeLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    style="@style/Font"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="12dp" />

                <TextView
                    style="@style/Font"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:text="@string/load_details"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/white" />

                <TextView
                    style="@style/Font"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/black" />

                <TextView
                    style="@style/Font"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:text="@string/vehicle_type"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/white" />

                <TextView
                    style="@style/Font"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/black" />

                <TextView
                    style="@style/Font"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:text="@string/post"
                    android:textColor="@color/white"
                    android:textSize="12dp" />


            </LinearLayout>
        </HorizontalScrollView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:padding="10dp"
            app:cardCornerRadius="15dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <TextView
                        style="@style/Font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5sp"
                        android:text="@string/what_s_your_expected_price"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_round_box"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/ed_amount"
                                android:layout_width="match_parent"
                                android:layout_height="46dp"
                                android:layout_weight="1"
                                android:backgroundTint="@android:color/transparent"
                                android:drawableStart="@drawable/ic_money"
                                android:drawablePadding="10dp"
                                android:hint="@string/amount"
                                android:inputType="number"
                                android:padding="10dp"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <Switch
                                android:id="@+id/swichtonne"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fix" />
                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <TextView
                        style="@style/Font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/the_number_of_hours_visible_load"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_round_box"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/ed_number"
                                android:layout_width="match_parent"
                                android:layout_height="46dp"
                                android:layout_weight="1"
                                android:backgroundTint="@android:color/transparent"
                                android:drawableStart="@drawable/ic_numberofhours"
                                android:drawablePadding="10dp"
                                android:hint="@string/number_of_hours"
                                android:inputType="number"
                                android:padding="10dp"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <Switch
                                android:id="@+id/swich_notfix"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/hours" />
                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />


                    <TextView
                        style="@style/Font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/pickup_contact_details"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/pickup_contect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_round_box"
                        android:drawableStart="@drawable/ic_user_bottom"
                        android:drawablePadding="10dp"
                        android:hint="@string/pickup_contact_details"
                        android:minHeight="46dp"
                        android:padding="15dp"
                        android:gravity="center|start"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                    <TextView
                        style="@style/Font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/drop_contact_detail"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/drop_contect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_round_box"
                        android:gravity="center|start"
                        android:drawableStart="@drawable/ic_user_bottom"
                        android:drawablePadding="10dp"
                        android:hint="@string/drop_contact_detail"
                        android:minHeight="46dp"
                        android:padding="15dp"
                        android:textColor="@color/black"
                        android:textSize="16dp" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />

                    <TextView
                        android:id="@+id/btn_postloaded"
                        style="@style/AppTheme.Button"
                        android:layout_width="match_parent"


                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/post_load" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />
                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>